@model TaskControl.Models.CreateUserViewModel

@{
	ViewBag.Title = Resources.Resources.CreateNewUser_Label;
}
<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>


<h2><span @*class="glyphicon glyphicon-user"*@></span>  @Resources.Resources.CreateNewUser_Label </h2>

<br/>
<br/>

	@using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
	{

	<form>
    @Html.AntiForgeryToken()
		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.Username_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "username" })
          @Html.ValidationMessageFor(model => model.UserName)
			</div>
		</div>

		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.Password_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
          @Html.ValidationMessageFor(model => model.Password)
        </div>
		</div>

    <div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.ConfirmPassword_Label </b>
      <div class="col-10">
        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
      </div>
    </div>
		
		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.Email_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email" })
          @Html.ValidationMessageFor(model => model.Email)

        </div>
		</div>

		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.FirstName_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "firstname" })
          @Html.ValidationMessageFor(model => model.FirstName)
        </div>
		</div>

		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.LastName_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @id = "lastname" })
          @Html.ValidationMessageFor(model => model.LastName)

        </div>
		</div>

		<div class="form-group">
      <b class="control-label col-md-2"> @Resources.Resources.PhoneNumber_Label </b>
			<div class="col-10">
				@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "phonenumber" })
			</div>
		</div>

    <div class="form-group">
      <div class="col-10">
        <input type="submit" value="@Resources.Resources.Create_Button" class="btn btn-primary btn-lg" />
      </div>
    </div>
	</form>


  }

<br/>
<br/>
<p>
  @Html.ActionLink(Resources.Resources.BackToList_Link, "Index")
  </p>

  <script type="text/javascript">
    $(document).ready(function () {
      if($('.field-validation-error') != null && $('.field-validation-error').length > 0)
      {
        $('.field-validation-error').addClass('alert alert-danger alert-dismissable');
      }
      //console.log("bojana");
    });
  </script>
