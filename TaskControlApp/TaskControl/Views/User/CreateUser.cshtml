@model TaskControl.Models.CreateUserViewModel

@{
	ViewBag.Title = "Create New User";
}
<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>


<h2><span @*class="glyphicon glyphicon-user"*@></span> Create New User </h2>

<button type="button" onclick="location.href='@Url.Action("Index", "User")'" class="btn btn-secondary btn-lg"> Back </button>
<br/>
<br/>

	@using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
	{
	<form>
		<div class="form-group">
			<label for="UserName">Username</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "username" })
          @Html.ValidationMessageFor(model => model.UserName)
			</div>
		</div>

		<div class="form-group">
			<label for="Password">Password</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
          @Html.ValidationMessageFor(model => model.Password)
        </div>
		</div>

    <div class="form-group">
      <label for="Password">Confirm password</label>
      <div class="col-10">
        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
      </div>
    </div>
		
		<div class="form-group">
			<label for="Email">Email</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email" })
          @Html.ValidationMessageFor(model => model.Email)

        </div>
		</div>

		<div class="form-group">
			<label for="FirstName">First Name</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "firstname" })
          @Html.ValidationMessageFor(model => model.FirstName)
        </div>
		</div>

		<div class="form-group">
			<label for="LastName">Last Name</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @id = "lastname" })
          @Html.ValidationMessageFor(model => model.LastName)

        </div>
		</div>

		<div class="form-group">
			<label for="PhoneNumber">Phone Number</label>
			<div class="col-10">
				@Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "phonenumber" })
			</div>
		</div>
		<input type="submit" class="btn btn-primary btn-lg" value="Create" /> 
	</form>


  }


<script type="text/javascript">
    $(document).ready(function () {
      if($('.field-validation-error') != null && $('.field-validation-error').length > 0)
      {
        $('.field-validation-error').addClass('alert alert-danger alert-dismissable');
      }
      //console.log("bojana");
    });
</script>