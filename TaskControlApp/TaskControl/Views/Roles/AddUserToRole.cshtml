@using TaskControl.Models

@model  UserInRoleViewModel
@{
  ViewBag.Title = "AddUserToRole";
}


  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Add user to role</h3>
      </div>

      <div class="modal-body">
        @using (Ajax.BeginForm("AddUserToRole", "shared", new AjaxOptions
        {
          HttpMethod = "POST",
          OnSuccess = "addUserToRoleSuccess()",
          OnFailure = "addUserToRoleFailure()"

        }))
        {

      <div class="form-group">
        @Html.LabelFor(x => x.SelectedRoleId)
        @Html.DropDownListFor(x => x.SelectedRoleId, Model.UserRoles, "Select Role", new { @class = "form-control" })
      </div>
      <div class="form-group">
        @Html.LabelFor(x => x.SelectedUserId)
        @Html.DropDownListFor(x => x.SelectedUserId, Model.Users, "Select User", new { @class = "form-control" })
      </div>

      <button type="submit" class="btn btn-primary">Save changes</button>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>


        }

      </div>

      </div>
    </div>
