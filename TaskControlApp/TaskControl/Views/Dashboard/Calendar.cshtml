    }


    function PrepareInfo(result) {
      var htmlText = '';
      for (var key in result) {
        if (result.hasOwnProperty(key)) {
          htmlText += '<p> <b>' + key + '</b>: ' + result[key] + '</p>';
        }
      }

      return htmlText;
    }

  });
</script>